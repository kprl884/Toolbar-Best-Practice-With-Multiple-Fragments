<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light"
    tools:context=".DetailActivity">

    <Button
        android:id="@+id/detail_btn_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="2dp"
        android:background="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/detail_layout_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/detail_btn_back"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Project Title" />

    <TextView
        android:id="@+id/detail_tv_lbl_blurb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_blurb"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/detail_layout_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_btn_back" />

    <TextView
        android:id="@+id/detail_tv_blurb"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingEnd="30dp"
        android:text="@string/example_string"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/detail_tv_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/detail_tv_lbl_blurb"
        app:layout_constraintTop_toBottomOf="@+id/detail_layout_title" />

    <TextView
        android:id="@+id/detail_layout_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_location"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/detail_layout_state"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_tv_lbl_blurb" />

    <TextView
        android:id="@+id/detail_tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/detail_tv_state"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/detail_layout_location"
        app:layout_constraintTop_toBottomOf="@+id/detail_tv_blurb"
        tools:text="Istanbul" />

    <TextView
        android:id="@+id/detail_layout_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_state"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_layout_location" />

    <TextView
        android:id="@+id/detail_tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/detail_layout_state"
        app:layout_constraintTop_toBottomOf="@+id/detail_tv_location"
        tools:text="DE" />


</androidx.constraintlayout.widget.ConstraintLayout>