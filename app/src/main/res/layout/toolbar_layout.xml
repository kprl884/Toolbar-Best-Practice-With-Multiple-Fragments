<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="toolbarProject"
            type="com.example.lastversion.models.ProjectsModel" />
    </data>

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar_layout"
        android:background="@color/colorToolbarBackGround">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/toolbar_title"
                android:id="@+id/toolbar_back_btn"
                android:background="@drawable/back"
                android:layout_width="36dp"
                android:layout_height="36dp" />

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                android:ellipsize="middle"
                android:gravity="start"
                android:padding="1dp"
                android:textStyle="bold|italic"
                android:text='@{toolbarProject.title ?? ""}'
                app:layout_constraintBottom_toBottomOf="@id/toolbar_back_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/toolbar_back_btn"
                app:layout_constraintTop_toTopOf="@id/toolbar_back_btn"
                tools:text="de" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </Toolbar>
</layout>